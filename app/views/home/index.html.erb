      <%= link_to "PDF", act_path(format: 'pdf') %><br> <br>
      
     <form action="/searchh" method="post">
        <p>
          <input id="search" name="search" type="text" />
          <input name="commit" type="submit" value="search" />
        </p>
     </form>

    <div class="panel panel-default">
      <div class="pre-scrollable">
        <% @students.each do |t| %>
        <div class="panel panel-default">
         <ul>
            <%= image_tag t.image_url(:thumb).to_s %> 
           <li> Name: <%= t.name %> </li>
            <li> DOB: <%= t.dob %> </li>
            <li> Phone: <%= t.phone %> </li>
           <li> Course: <%= t.course.body %> </li>
          <%  if t.youtube_id != nil %>
         <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#exampleModall">Watch video</button>
         <% end %>

    <div class="modal fade" id="exampleModall" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
      <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your video</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <iframe id="ytplayer" type="text/html" width="600" height="300"
  src="https://www.youtube.com/embed/<%= t.youtube_id %>?autoplay=1&origin=http://example.com"
  frameborder="0"></iframe>
  
      </div>
      </div>
      </div>

        </ul>
      </div>
    <% end %>
  </div>
</div>
