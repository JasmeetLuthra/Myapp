


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Student</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>


   <%= form_for :student, url: '/students' ,  html: { class: 'form-horizontal', :multipart => true} do %>
      <div class="modal-body">
         
  <div class="form-group" accept-charset="character_set">
    <label class="control-label col-sm-2" for="name">NAME</label>
    <div class="col-sm-10">
   <input type="text" pattern="[A-Za-z]+" class="form-control"  name="student[name]" id="name" data-remote = "true" placeholder="Enter name" required>
    </div>
  </div>

 <div class="form-group">
    <label class="control-label col-sm-2" for="dob">DOB:</label>
    <div class="col-sm-10">
   <input type="date" class="form-control" name="student[dob]" pattern="[A-Za-z]" id="exampleInputDOB1" placeholder="Date of Birth" required>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="phn">PHONE:</label>
    <div class="col-sm-10">
       <input type="text" class="form-control" pattern="[0-9]{10}" name="student[phone]" maxlength="10" placeholder="Enter Number" required>
    </div>
  </div>

  <div class="form-group">
  <label class="control-label col-sm-2" for="sel">COURSES:</label>
  <div class="col-sm-10">
  <select class="form-control" name="student[course_id]" id="sel1">
  <% @courses.each do |c| %>
    <option value="<%= c.id %>"> <%= c.body %></option>
    <% end %>
  </select>
  
</div>
</div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="image">image:</label>
    <div class="col-sm-10">
    <input type="file" name="student[image]" accept="image/*">
    </div>
    </div>
    
   <div class="form-group" accept-charset="character_set">
    <label class="control-label col-sm-2" for="yout">Youtube Link:</label>
    <div class="col-sm-10">
   <input type="text" class="form-control"  name="student[youtube_id]" id="name" placeholder="Enter youtube link:" required>
    </div>
  </div> 



      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary"  id="newstudent">Submit</button>
      </div>
      <% end %>
      
    </div>
  </div>
</div>